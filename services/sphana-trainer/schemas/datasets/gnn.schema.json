{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GNNDatasetRecord",
  "type": "object",
  "required": ["query_id", "candidates"],
  "properties": {
    "query_id": {"type": "string"},
    "candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["node_features"],
        "properties": {
          "node_features": {"type": "array"},
          "edge_index": {"type": "array"},
          "edge_directions": {"type": "array"},
          "label": {"type": "number"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}

